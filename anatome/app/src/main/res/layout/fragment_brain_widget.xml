<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.wellbeings.anatome"
    android:background="#d67dfc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keep tracks of the things that make you happy:"
        android:textColor="#f9fd80"
        android:textSize="20dp"
        android:textStyle="bold"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:inputType="date"
        android:ems="10"

        android:id="@+id/etDate1"
        android:background="#e3bffc"
        android:text="1st December, 2015"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etNote1"
        android:hint="Enter a new note.."
        android:textColor="#060606"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_below="@+id/etDate1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/addButton"
        android:textColor="@color/abc_primary_text_material_dark"
        android:clickable="true"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_below="@+id/etNote1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDlt1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:background= "@drawable/bin"
        android:clickable="true"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_below="@+id/etNote1"
        android:layout_alignRight="@+id/etNote1"
        android:layout_alignEnd="@+id/etNote1" />


</RelativeLayout>
