<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.wellbeings.anatome"
    android:background="#d67dfc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keep tracks of the things that make you happy:"
        android:textColor="#f9fd80"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_above="@+id/btnSave1"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:id="@+id/noteScroll"
            >


        </LinearLayout>
    </HorizontalScrollView>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave1"
        android:textColor="@color/abc_primary_text_material_dark"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnCamera"
        android:layout_toEndOf="@+id/btnCamera" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/btnCamera"
        android:onClick="onCamera"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/leftArrow"
        android:layout_toEndOf="@+id/leftArrow" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftArrow"
        android:layout_alignBottom="@+id/btnSave1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/leftarrow"
        android:background="@null"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rightArrow"
        android:layout_alignBottom="@+id/btnSave1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/rightarrow"
        android:background="@null"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop "
        android:id="@+id/btnStop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnStartRecording"
        android:layout_toEndOf="@+id/btnStartRecording"
        android:onClick="onStopRecording"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnStartRecording"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnSave1"
        android:layout_toEndOf="@+id/btnSave1"
        android:onClick="onStartRecording"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/btnPlay"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop"
        android:onClick="onPlay"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/btnPause"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnPlay"
        android:onClick="onPause"/>


</RelativeLayout>
