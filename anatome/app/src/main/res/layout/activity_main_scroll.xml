<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:background="@color/main_main_bg"
        android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        tools:context="io.wellbeings.anatome.MainScroll"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bookingSystemBackgroundKite"
                android:src="@drawable/kite"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/bookButtonOnMainScroll"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="20dp"
                android:src="@drawable/book"
                android:layout_marginRight="16dp"
                android:visibility="invisible"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#09849a"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need more help ?"
                android:id="@+id/needMoreHelpText"
                android:layout_gravity="left|bottom"
                android:textColor="@android:color/black"
                android:textSize="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"/>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="44dp"
                android:id="@+id/bookingInfoButton"
                android:layout_gravity="right|bottom"
                android:src="@drawable/info_grey"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#09849a"
                android:scaleType="fitXY"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"/>

        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/mainscroll_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:id="@+id/heart"
            android:layout_marginTop="540dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />


        <RelativeLayout android:id="@+id/brain_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/liver_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:id="@+id/brain"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"

               />

            <io.wellbeings.anatome.ElectricView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/view"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/liver_back"
            android:layout_alignTop="@+id/heart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="366dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/liver"
            android:layout_alignTop="@+id/liver_back"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/footer"
            android:layout_below="@+id/mainscroll_background"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />

        </RelativeLayout>
    </LinearLayout>
 </ScrollView>









