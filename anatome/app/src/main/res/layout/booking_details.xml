<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49cbde">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/balloon_small" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.04">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/booking_booked_date"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ff73A8BE"
                android:layout_marginBottom="6dp"
                android:textSize="26dp"
                android:text="dd-MM-yy"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/bookedTime"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#ff73A8BE"
                    android:layout_marginTop="6dp"
                    android:textSize="26dp"
                    android:text="hh:mm a" />
            </FrameLayout>

        </LinearLayout>
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/booking_booked_time"
                android:layout_gravity="center_horizontal|top"
                android:textColor="#ffffffff"
                android:layout_marginTop="6dp"
                android:textSize="26dp"
                android:text="hh:mm a" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/backFromBooked"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="22dp"
                android:layout_marginRight="1dp"
                android:textSize="24dp"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#09849a"
                />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>