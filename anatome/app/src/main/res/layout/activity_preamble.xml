<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="io.wellbeings.anatome.Preamble"
    android:background="@color/main_main_bg"
    >


    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="io.wellbeings.anatome.PreambleLanguage"
        android:id="@+id/fragment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/fragment_preamble_language" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="io.wellbeings.anatome.PreambleCarousel"
        android:id="@+id/fragment2"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_preamble_carousel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fragment" />
</RelativeLayout>
